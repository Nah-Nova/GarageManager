@{
    ViewData["Title"] = "AutoProfix Garage Management System";
}

<div class="jumbotron text-center bg-dark text-light py-5">
    <h1 class="display-4 mt-4">Welcome to GMS 🔧</h1>
    <p class="lead">Streamline your garage operations with our (Garage Management System) solution.</p>
    <a class="btn btn-primary btn-lg" href="#features" role="button">Explore Features</a>
</div>

<section id="features" class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-lg bg-light text-dark">
                <div class="card-body">
                    <h2 class="card-title">Vehicle Registration</h2>
                    <p class="card-text">Capture detailed information about each vehicle with ease.</p>
                    <a class="btn btn-primary btn-lg align-content-center" href="/Vehicle" role="button">Register Vehicle</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg bg-light text-dark">
                <div class="card-body">
                    <h2 class="card-title">Maintenance Overview</h2>
                    <p class="card-text">Track repairs, maintenance services, and costs effortlessly.</p>
                    <a class="btn btn-primary btn-lg align-content-center" href="/MaintenanceRecord" role="button">Track Repairs</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg bg-light text-dark">
                <div class="card-body">
                    <h2 class="card-title">Inventory Management</h2>
                    <p class="card-text">Check inventory, and keep it updated and never lose parts.</p>
                    <a class="btn btn-primary btn-lg align-content-center" href="/InventoryItem" role="button">View Inventory</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Add more sections and content as needed -->

<section id="documentation" class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="display-4 text-center">Documentation 📝</h2>
            <p class="lead text-center">Explore our comprehensive documentation to make the most of AutoProfix Garage Management System.</p>
            <div class="text-center">
                <a class="btn btn-primary btn-lg" href="https://github.com/Nah-Nova/GarageManager/blob/main/README.md#autoprofix-garage-management-system-" role="button">Explore Documentation</a>
            </div>
        </div>
    </div>
</section>

@model GarageManagement.Models.Vehicle

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChassisNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChassisNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mileage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mileage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaintenanceStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaintenanceStatus)
        </dd>
    </dl>
    <h2>MaintenanceRecords</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Cost</th>
            <th>Workdone</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var maintenanceRecord in Model.MaintenanceRecords)
        {
            <tr>
                <td>@maintenanceRecord.Date</td>
                <td>@maintenanceRecord.Cost</td>
                <td>@maintenanceRecord.Workdone</td>
            </tr>
        }
        </tbody>
    </table>
    <h2>Invoices</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>InvoiceNumber</th>
            <th>TotalAmount</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var invoice in Model.Invoices)
        {
            <tr>
                <td>@invoice.Date</td>
                <td>@invoice.InvoiceNumber</td>
                <td>@invoice.TotalAmount</td>
            </tr>
        }
        </tbody>
    </table>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
